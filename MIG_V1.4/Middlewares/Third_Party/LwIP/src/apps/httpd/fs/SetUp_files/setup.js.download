document.getElementById('Slowleak').addEventListener('input', function () {
  let val = this.value;

  // If user enters 1 digit and no dot, add "."
  if (/^\d$/.test(val)) {
    this.value = val + '.';
  }

  // Optional: Limit to one decimal digit (e.g., 1.1)
  if (/^\d\.\d{2,}$/.test(val)) {
    this.value = val.slice(0, 3);
  }
});
